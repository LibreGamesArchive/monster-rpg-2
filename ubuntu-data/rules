#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export BASEDIR=$(shell pwd)
export PACKAGE_DIR=${BASEDIR}/..

export INSTDIR=${PACKAGE_DIR}/inst

export MONSTER2_BASENAME=monster-rpg-2

INSTALL = install
INSTALL_FILE    = $(INSTALL) -p    -o root -g root  -m  644
INSTALL_PROGRAM = $(INSTALL) -p    -o root -g root  -m  755
INSTALL_SCRIPT  = $(INSTALL) -p    -o root -g root  -m  755
INSTALL_DIR     = $(INSTALL) -p -d -o root -g root  -m  644

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	MAKEFLAGS += -j$(NUMJOBS)
endif


build: build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	dh_clean
	rm -fr ${INSTDIR}
	rm -fr debian/${MONSTER2_BASENAME}-data
	rm -f debian/files
	[ ! -f build-stamp ] || rm build-stamp


install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	dh_install ubdata/data opt/${MONSTER2_BASENAME}
	${INSTALL_FILE} -D overrides/monster-rpg-2-data debian/monster-rpg-2-data/usr/share/lintian/overrides/monster-rpg-2-data
	
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
	
binary-arch:
#nada

binary: binary-indep binary-arch

%:
	dh $@ 

.PHONY: build clean binary-indep binary-arch binary install
